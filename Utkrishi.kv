<CirclarProgress>
    progress_bar_color: 0,0,0,0

    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            origin: self.center

    canvas.after:
        PopMatrix

    MDFloatLayout:
        size_hint: 1, 1
        pos_hint: {"center_x": .5, "center_y": .5}
    
        canvas.before:
            Color:
                rgba: root.progress_bar_color
            Line:
                width: 5
                circle: (self.center_x, self.center_y, min(self.width, self.height)/ 2, 0, 250)
            

